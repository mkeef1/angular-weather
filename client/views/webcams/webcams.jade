h3 {{title}}
  .row
    .col-xs-3
      form(novalidate, role='form', name='zipForm')
        .form-group
          label(for='zip') Zip Code
          input.form-control#zip(ng-pattern='/^[0-9]{5}$/', ng-model='zip', type='text', name='zip', required, autofocus)
        button.btn.btn-primary(type='submit', ng-show='zipForm.$valid', ng-click='getWebcams()') Check Webcams
    .col-xs-9
.row(ng-show='webcams')
  .col-xs-12
    .webcam(ng-repeat='webcam in webcams')
      img(ng-src='{{webcam.WIDGETCURRENTIMAGEURL}}')
